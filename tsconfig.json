{
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "target": "es2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noUncheckedIndexedAccess": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "exclude": ["node_modules", "templates"]
}
